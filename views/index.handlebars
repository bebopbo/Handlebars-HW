<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Burgers!!!</h1>
    <p class="lead">Welcome to the burger app, where you can list all of your favorite burgers.</p>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h2>Freshly cooked burgers</h2>

          <ul class="card-body">
            {{#each burgers}}
            {{#unless Devoured}}
            {{> burgz/burgz-section devoured=true}}
            {{/unless}}
            {{/each}}
          </ul>

          <h2>Burgers that have been devoured..</h2>

          <ul class="card-body">
            {{#each burgers}}
            {{#if Devoured}}
            {{> burgz/burgz-section devoured=false}}
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h2>Cook a Burger</h2>
          <form class="create-form">

            <div class="form-group">
              <label for="ca">Burger:</label>
              <input type="text" id="ca" name="name">
            </div>

            <div class="form-group">
              <label for="devoured">Status?</label><br>
              {{!-- <input type="radio" name="devoured" value="1" checked> Devoured!<br> --}}
              <input type="radio" name="devoured" value="0"> Hungry
            </div>

            <button type="submit">Start up the Grill!</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>